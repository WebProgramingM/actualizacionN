
body
	background-color #090707
	font-family: 'Open Sans', sans-serif;
	font-size: 17px

.intro
	padding 20vh 15px 0
	
.clear25
	width 100%
	height 25px
	clear both
	display inline-block

header
	width 100%
	height 90vh
	
#welcome
	padding 20px 15px
	background-color #D59629
	text-align center
	color #090707
	h3
		font-family: 'Satisfy', cursive;
		font-size 3em
	span
		font-size 120%
		

a
	color #090707
	transition 0.2s all
	&:hover
		color #4F3A01
		text-decoration none
		transition 0.2s all
		
#menu
	background-image url('../img/fondomenu.jpg')
	background-size cover
	text-align center
	color #FFF4CC
	padding 35px 0
	h2
		color #D59629
		font-size 1.8em
		letter-spacing 7px
		margin 30px 0
		// font-family: 'Satisfy', cursive;
		text-transform uppercase
		font-weight 700
		
footer
	background-color #D59629
	padding 35px 0 120px
	text-align center
	h2 
		font-family: 'Satisfy', cursive;
		font-size 2.4em
	