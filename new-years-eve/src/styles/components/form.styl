textarea:required
	border-bottom 1px solid #2F2C28
	font-family 'raleway'

::-webkit-input-placeholder
	text-align center
	color rgba(255, 255, 255, 0.3)
	// font-style italic
	font-size 0.8em

:-moz-placeholder
	text-align center
	color rgba(255, 255, 255, 0.3)
	// font-style italic
	font-size 0.8em

::-moz-placeholder
	text-align center
	color rgba(255, 255, 255, 0.3)
	// font-style italic
	font-size 0.8em

:-ms-input-placeholder
	text-align center
	color rgba(255, 255, 255, 0.3)
	// font-style italic
	font-size 0.8em

.expanding
	vertical-align top

.send-icn
	fill $text-color-nomada
	&:hover
		fill $text-color-nomada-menu
		cursor pointer

button
	background none
	border none
	outline none
	margin 2vmax
	&:hover
		small
			opacity 1

small
	display block
	opacity 0

.website
	opacity 1
	font-size 16px
	color white
	position relative
	text-align center
	display block
	margin-top 7%
	a
		color white