.formulario
	text-align: center
	padding-top: 100px
#contactoform
	max-width 90%
	margin 0 auto
	color white
	p
		color white !important


h2
	color $text-color-nomada
	text-transform uppercase
	font-size 3rem
	margin-bottom 10px
	margin-bottom 10px
label
	font-weight 400
	cursor pointer
	color white

textarea,
input
	border none
	outline none
	border-radius 0
	text-align center
	background none
	font-weight 700
	font-family 'Lato', georgia
	font-size 25px
	color $text-color-nomada-menu
	max-width 90%
	padding 1rem
	border 1px dashed rgba(255, 255, 255, 0)
	box-sizing border-box
	cursor text
	&:-webkit-autofill
		-webkit-box-shadow: 0 0 0 1000px black inset;
		-webkit-text-fill-color: $text-color-nomada-menu
		transition: black 5000s ease-in-out 0s

textarea
	text-align left
	resize none
	width 60%
	border-color rgba(255, 255, 255, 0)
	&:focus
		background-color rgba(255, 255, 255, 0.2)
		border 1px solid rgba(255, 255, 255, 1)
		&:required
		&:valid
			border 1px solid rgba(255, 255, 255, 0)
			border-bottom 1px solid rgba(255, 255, 255, 0.2)

