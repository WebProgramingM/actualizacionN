media_queries = {
	mobile  : "only screen and (max-width: 760px)",
	tablet  : "only screen and (min-width: 761px) and (max-width: 970px)",
	desktop : "only screen and (min-width: 971px)"
}

for_breakpoint(breakpoints)
	conditions = ()
	for breakpoint in breakpoints
		push(conditions, media_queries[breakpoint])
	conditions = join(", ", conditions)
	@media conditions
		{block}