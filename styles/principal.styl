#section4
	position relative
	background-color black
	.address
		position absolute
		padding 15px 60px 15px 30px
		max-width 100%
		background-color rgba(0, 0, 0, .60)
		color #EA7311
		z-index 999
		bottom 15px
		left 0
		font-weight bold
		z-index 50
		+for_breakpoint(desktop)
			max-width 16%
			background-color rgba(0, 0, 0, .80)
			right 20px
			bottom 30px
	
#map
	width 100%
	height 100%
		
#section5
	background-color white
	background-image url('../img/contact.jpg')
	background-size cover
	color white
	+for_breakpoint(mobile)
		background-image url('../img/contact-mobile.jpg')

.modal
	position relative
	display block
	position fixed
	z-index 1
	padding-top 150px
	left 0
	top 0
	width 100%
	height 100%
	overflow auto
	background-color rgb(0,0,0)
	background-color rgba(0,0,0,0.8)
	
.modal-content2
	position relative
	margin auto
	width 68vh
	height 60vh
	+for_breakpoint(mobile)
		width 43vh
		height 40vh
	
.modal-content
	position relative
	background-color #fefefe
	background-size cover
	background-repeat no-repeat
	background-position: center
	margin auto
	padding 20px
	border 1px solid #888
	width 70vh
	height 60vh
	background-image url('/img/Ano_Nuevo_Nomads.png')
	+for_breakpoint(mobile)
		background-image url('/img/NomadsMov.png')
		width 45vh
		height 40vh
	

.close
	position absolute
	z-index 1
	color #aaaaaa
	right 0
	font-size 28px
	font-weight bold

.close:hover,
.close:focus
	color #000
	text-decoration none
	cursor pointer