body
	font-family: 'Raleway', sans-serif;
	background-color rgb(31, 28, 26)

$gold-nomads = #bf8204
$coal-nomads = #c9c3a4
$grime-nomads = #411f08
$mine-nomads = #f9d79f

a
	color $gold-nomads
	font-weight bold
	&:hover
		color $gold-nomads
		text-decoration none

#fp-nav ul li a span, .fp-slidesNav ul li a span
	background $gold-nomads !important
	
#fp-nav ul li .fp-tooltip
	color $gold-nomads
	font-family 'Raleway'
	text-transform uppercase
	letter-spacing 2px
	font-size 0.8em

.btn
	padding 15px 24px
	margin-top 30px
	display inline-block
	font-family raleway
	font-weight light
	text-transform uppercase
	&.btn-nomads
		color $gold-nomads
		background-color rgba(191, 130, 4, 0.05)
		letter-spacing 2px
		border 1px solid $gold-nomads
		transition 0.3s ease
		&:hover
			background-color rgba(191, 130, 4, 0.30)
			transition 0.3s ease
			text-decoration none
		&:focus
			text-decoration none
	&.flat
		background-color $gold-nomads
		color $grime-nomads
		&:hover
			background-color $grime-nomads
			color $coal-nomads
			text-decoration none
		&:focus
			text-decoration none
	&.quiet
		padding 7px 15px
	&.active
		background-color $grime-nomads !important
		color $coal-nomads

.btn-close
	color $gold-nomads
	font-size 2rem
	&:hover
		text-decoration none
		color $coal-nomads
		

.section
	text-align center
	overflow hidden
	.inner
		padding 40px 0
		+for_breakpoint(mobile)
			padding 80px 0

.overlaypattern
	float left
	position absolute
	background-color rgba(0, 0, 0, .40)
	background-image url('overlays/03.png')
	width 100%
	height 100%
	top 0
	bottom 0 
	right 0
	left 0
	z-index 4
	transition 0.3s ease
	
#videohome
	float left
	position absolute
	right  0
	bottom  0
	top 0
	right 0
	width 100%
	height 100%
	background-size 100% 100%
	background-color black
	background-position center center
	background-size contain
	object-fit cover
	z-index 3
		
#section0
	background-color black
	overflow: hidden;
	+for_breakpoint(mobile)
		background-image url('../img/mobile-home.jpg')
		background-position center
		background-size cover
	.layer
		position: absolute;
		z-index: 4;
		width: 100%;
		left: 0;
		top: 6vh
		+for_breakpoint(mobile)
			top: 28vh
		.bell
			max-width 80vw
			max-height: 60vh
			+for_breakpoint(desktop)
				padding-top: 90px
			+for_breakpoint(tablet)
				padding-top: 90px
.home
	padding-top: 10vh
#section1
	color white
	.homenu
		background-image url('../img/menuback02.jpg')
		background-size cover
		text-align left
		+for_breakpoint(mobile)
			background-image url('../img/menumobile.jpg')
		h2
			font-size 4em
			font-weight 100
			color #f7e5cb
			line-height 0.8em
			+for_breakpoint(mobile)
				max-width  50%
				color white
				margin 0 auto 
		p
			color $mine-nomads
			font-family: 'Lusitana', serif;
			font-size 2em
			margin-top 12px
			line-height 1.2em
			+for_breakpoint(mobile)
				font-size 1.5em
		a
			text-align center
	.menudisplay
		background-size cover
		background-color #090707
		text-align left
		&.fondo01
			background-image url('../img/menu01.jpg')
			background-position center right
		&.fondo02
			background-image url('../img/menu02.jpg')
			background-position center left
		&.fondo03
			background-image url('../img/menu03.jpg')
			background-position center center
		&.fondo04
			background-image url('../img/menu04.jpg')
			background-position center center
			h3
				letter-spacing 1px
				font-weight 600
				line-height 1.2em
				color $gold-nomads
			p
				margin-bottom 17px
		h2
			font-size 1em
			margin-bottom 5px
			letter-spacing 1px
			color $gold-nomads
			font-weight 600
			font-family: 'Lusitana', serif;
		h3
			font-size 1.6em
			color $coal-nomads
			font-weight light
			letter-spacing 2px
			margin 0 0 15px
			span
				font-size: 1.2rem
				font-style: oblique;
		p
			color $coal-nomads
			margin-bottom 10px
			font-size 0.9em
			letter-spacing 1px
		


#section2
	background-color black
	background-image url('../img/reserve02.jpg')
	background-size cover
	background-position left
	+for_breakpoint(mobile)
		background-image url('../img/reserve-mobile.jpg')
	h2
		font-size 6rem
		line-height 0.9
		font-weight 100
		color white
		line-height 0.5em
		margin-bottom 15px
		margin-left -55px
		i
			vertical-align middle
			margin-right 9px
	p
		color $coal-nomads
		font-size 14px
		line-height 1.7em
		padding 15px 40px
	

#section3
	/* fluid 5 columns */
	// .grid-sizer
	// 	width 25%
	// 	+for_breakpoint(mobile)
	// 		width 50%
	.grid-item
		margin 0 !important
		width 20%
		float left
		opacity 0.6
		transition 0.2s all
		+for_breakpoint(tablet)
			width 33.33%
		+for_breakpoint(mobile)
			width 50%
		img
			width 100%
		&:hover
			opacity 1
			transition 0.2s all
			
			
